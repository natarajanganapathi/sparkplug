{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "SparkPlug": "Information"
    }
  },
  "AllowedHosts": "*",
  "SparkPlug": {
    "MongoDb": {
      "ConnectionString": "",
      "DatabaseName": "Demo"
    },
    "Api": {
      "ApplicationName": "SparkPlug Api",
      "AzureAd": {
        "Instance": "https://login.microsoftonline.com/<tenant_id>",
        "TenantId": "<tenant_id>",
        "ClientId": "<client_id>",
        "ClientSecret": "<client_secret>",
        "Scopes": [
          "https://graph.microsoft.com/.default"
        ],
        "TokenCacheKey": "sparkplug_api_token_cache"
      },
      "ExternalIdentityProvider": [
        {
          "Provider": "Microsoft",
          "ClientId": "",
          "ClientSecret": ""
        },
        {
          "Provider": "Google",
          "ClientId": "",
          "ClientSecret": ""
        }
      ]
    }
  }
}